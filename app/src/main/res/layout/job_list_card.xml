<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="1dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingVertical="10dp"
        android:id="@+id/jobList"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/topImage"
            android:paddingVertical="5dp"
            android:paddingLeft="5dp"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:id="@+id/companyLogo"
                android:layout_marginLeft="10dp"
                android:src="@color/textDefault"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/jobTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/more"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/companyLogo"
                android:layout_toRightOf="@+id/companyLogo"
                android:text="JobTitle"
                android:textColor="@color/textDefault"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/jobTitle"
                android:layout_alignStart="@+id/jobTitle"
                android:layout_below="@+id/jobTitle"
                android:text="Victoria Island, Lagos Nigeria"
                android:textSize="12sp"
                 />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more_vert"
                android:id="@+id/more"
                android:tint="@color/textDefault"
                android:layout_alignParentRight="true"
                android:layout_margin="2dp"/>

        </RelativeLayout>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_below="@+id/topImage"
          android:id="@+id/contentDiv"
          android:layout_height="wrap_content">

          <ImageView
              android:layout_width="match_parent"
              android:id="@+id/compannyImage"
              android:paddingHorizontal="16dp"
              android:adjustViewBounds="true"
              android:scaleType="fitXY"
              android:src="@drawable/wall"
              android:layout_height="125dp" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/lorem"
              android:id="@+id/jobDes"
              android:maxLines="4"
              android:layout_marginTop="5dp"
              android:paddingHorizontal="16dp"
              android:layout_centerVertical="true"
              android:textSize="14sp"
              android:ellipsize="marquee"
              android:layout_below="@+id/compannyImage"/>

      </RelativeLayout>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_below="@+id/contentDiv"
          android:paddingVertical="5dp"
          android:layout_marginBottom="10dp"
          android:layout_marginTop="5dp"
          android:id="@+id/footerDiv"
          android:layout_marginHorizontal="16dp"
          android:layout_height="wrap_content">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/salary"
              android:textColor="@android:color/black"
              android:text="N200,000 / month"/>

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_alignParentRight="true"
              android:orientation="horizontal"
              android:layout_height="wrap_content">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textStyle="bold"
                  android:textColor="@color/textDefault"
                  android:text="@string/applys"/>

              <ImageView
                  android:layout_width="20dp"
                  android:src="@drawable/ic_vid"
                  android:layout_marginLeft="5dp"
                  android:layout_marginRight="5dp"
                  android:layout_height="20dp" />
          </LinearLayout>

      </RelativeLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>