<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:src="@mipmap/lgo"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/grey"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/profile_image"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ThankGod Richard"
                android:textColor="@color/textDefault"
                android:textSize="14sp"
                android:textStyle="bold"
                android:id="@+id/SideName"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:id="@+id/sideDes"
                android:text="Android Developer"
                android:textStyle="bold"
                android:textColor="@color/textGrey"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/Sidedivider"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/profile_image"
            android:background="@color/grey"
            />

        <LinearLayout
            android:paddingTop="2dp"
            android:layout_width="match_parent"
            android:layout_below="@+id/Sidedivider"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textGrey"
                android:textStyle="bold"
                android:textSize="10sp"
                android:text="@string/joblisted"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/jobapplied"
                android:textColor="@color/SidebarText"
                android:textStyle="bold"
                android:textSize="10sp"
                android:text=" 55"
                />

            <View
                android:layout_width="2dp"
                android:background="@color/grey"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textGrey"
                android:textStyle="bold"
                android:textSize="10sp"
                android:text="@string/interviews"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Sideinterviews"
                android:textColor="@color/SidebarText"
                android:textStyle="bold"
                android:textSize="10sp"

                android:text=" 55"
                />



        </LinearLayout>


    </RelativeLayout>



</LinearLayout>
