<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rhicstech.crutra.crutra.UserUi.JobDetails">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">


               <FrameLayout
                   android:layout_width="match_parent"
                   android:id="@+id/cover"
                   android:layout_height="180dp">
                   <ImageView
                       android:layout_width="match_parent"
                       android:src="@color/textDefault"
                       android:id="@+id/compannyImage"
                       android:scaleType="fitXY"
                       android:layout_height="150dp" />

                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:elevation="20dp"
                       android:layout_height="match_parent">

                       <de.hdodenhof.circleimageview.CircleImageView
                           xmlns:app="http://schemas.android.com/apk/res-auto"
                           android:id="@+id/profile_image"
                           android:layout_width="96dp"
                           android:layout_alignParentBottom="true"
                           android:layout_centerHorizontal="true"
                           android:layout_height="96dp"
                           android:src="@mipmap/ic_launcher_round"
                           app:civ_border_width="2dp"
                           app:civ_border_color="@color/grey"/>
                   </RelativeLayout>

               </FrameLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_below="@+id/cover"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/jobTitle"
                            android:text="Job Title"
                            android:textColor="@color/textDefault"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                           />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/companyName"
                            android:layout_below="@+id/jobTitle"
                            android:textSize="16sp"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:text="COMAPANY NAME, AND ADDERESS"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/companyName"
                            android:id="@+id/jobDes"
                            android:text="@string/lorem"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/jobDes"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"
                            android:id="@+id/requirementTitle"
                            android:textStyle="bold"
                            android:text="Requirements"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_below="@+id/requirementTitle"
                            android:id="@+id/requirements"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:text="@string/lorem"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </ScrollView>

               <Button
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/applyNow"
                   android:background="@color/textDefault"
                   android:layout_alignParentBottom="true"
                   android:textColor="@android:color/white"
                   android:textStyle="bold"
                   android:id="@+id/apply"
                   />

           </RelativeLayout>

       </LinearLayout>


</FrameLayout>
